{
  "name": "zjkal/webman-turnstile",
  "description": "Cloudflare Turnstile verification plugin for Webman framework",
  "type": "webman-plugin",
  "keywords": ["webman", "turnstile", "cloudflare", "captcha", "verification", "plugin"],
  "license": "MIT",
  "authors": [
    {
      "name": "zjkal",
      "email": "zjkal@qq.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "workerman/webman-framework": "^1.0 || ^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "plugin\\zjkal\\turnstile\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "plugin\\zjkal\\turnstile\\Tests\\": "tests/"
    }
  },
  "extra": {
    "webman": {
      "config": "src/config/plugin"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "post-install-cmd": [
      "plugin\\zjkal\\turnstile\\Install::install"
    ],
    "post-update-cmd": [
      "plugin\\zjkal\\turnstile\\Install::install"
    ],
    "post-uninstall-cmd": [
      "plugin\\zjkal\\turnstile\\Install::uninstall"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}